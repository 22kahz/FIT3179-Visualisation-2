{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 800,
  "height": 450,
  "title": "Carbon Dioxide Emissions per Capita by Country 2023",
  "config": {
    "font": "Lexend Deca",
    "background": "#ecebe4",
    "style": {
    "cell": {
      "stroke": "transparent"
    }
  }
  },
  "projection": { "type": "equalEarth" },
  "layer": [
    {
      "data": { "sphere": true },
      "mark": { "type": "geoshape", "fill": "#aadaff", "stroke": null }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/22kahz/FIT3179-Week-9-Homework/refs/heads/main/vegalitevis/data/ne_110m.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [
        {
          "lookup": "properties.ISO_A3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/22kahz/FIT3179-Week-9-Homework/refs/heads/main/vegalitevis/data/owid-co2-data_cleaned.csv"
            },
            "key": "iso_code",
            "fields": ["co2_per_capita"]
          }
        }
      ],
      "params": [
        {
          "name": "country_hover",
          "select": {
            "type": "point",
            "fields": ["properties.ISO_A3"],
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "co2_per_capita",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0.5, 2, 5, 10, 15],
            "range": [
              "#edf8e9",
              "#c7e9c0",
              "#a1d99b",
              "#74c476",
              "#31a354",
              "#006d2c"
            ]
          },
          "legend": {
            "orient": "bottom",
            "title": "CO₂ per Capita (Tonnes)"
          }
        },
        "stroke": {
          "condition": {
            "param": "country_hover",
            "value": "gray"
          },
          "value": "lightgray"
        },
        "strokeWidth": {
          "condition": {
            "param": "country_hover",
            "value": 1.5,
            "empty": false
          },
          "value": 0.5
        },
        "opacity": {
          "condition": {
            "param": "country_hover",
            "value": 1
          },
          "value": 0.4
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          {
            "field": "co2_per_capita",
            "type": "quantitative",
            "title": "CO₂ per Capita (Tonnes)",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/22kahz/FIT3179-Week-9-Homework/refs/heads/main/vegalitevis/data/ne_110m.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "gray" }
    }
  ]
}
